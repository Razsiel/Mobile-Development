<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.inholland.imready">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.view.activity.SplashActivity"
            android:noHistory="true"
            android:theme="@style/App.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.view.activity.LoginActivity"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".app.view.activity.client.ClientHomeActivity" />
        <activity
            android:name=".app.view.activity.shared.MessagesActivity"
            android:parentActivityName=".app.view.activity.client.ClientHomeActivity"
            android:theme="@style/AppTheme.Alt" />
        <activity
            android:name=".app.view.activity.client.ClientBlockDetailsActivity"
            android:parentActivityName=".app.view.activity.client.ClientHomeActivity"
            android:theme="@style/AppTheme.Alt"/>
    </application>

</manifest>