<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingStart">@dimen/lg</item>
        <item name="android:paddingEnd">@dimen/lg</item>
    </style>

    <!-- Base Button Styles -->
    <style name="App.Button.NoColor" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingStart">@dimen/lg</item>
        <item name="android:paddingEnd">@dimen/lg</item>
    </style>

    <style name="App.Button.Primary">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="App.Button.Accent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="App.Button.Tertiary" parent="App.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorTertiary</item>
    </style>

    <style name="App.Button.Happy" parent="App.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorHappy</item>
    </style>

    <style name="App.Button.Borderless" parent="App.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:colorButtonNormal">@android:color/transparent</item>
    </style>

    <style name="App.Button.Borderless.Primary">
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="App.Button.Round">
        <item name="android:background">@drawable/bg_button_round</item>
        <item name="android:paddingStart">@null</item>
        <item name="android:paddingEnd">@null</item>
    </style>

    <style name="App.Button.Round.Primary">
        <item name="android:tint">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="App.Button.Round.Accent">
        <item name="android:tint">@android:color/white</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
</resources>