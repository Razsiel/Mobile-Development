<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Base Button Styles -->
    <style name="App.Button.Primary">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="App.Button.Accent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="App.Button.Tertiary" parent="App.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorButtonNormal">@color/colorTertiary</item>
    </style>

    <style name="App.Button.Happy" parent="App.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorButtonNormal">@color/colorHappy</item>
    </style>

    <style name="App.Button.Borderless" parent="App.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:colorButtonNormal">@android:color/transparent</item>
    </style>

    <style name="App.Button.Borderless.Primary">
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="App.Button.Round" parent="AppTheme">
        <item name="android:background">@drawable/bg_button_round</item>
    </style>

    <style name="App.Button.Round.Primary">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="App.Button.Round.Accent">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <color name="colorHappy">#1BC771</color>
</resources>