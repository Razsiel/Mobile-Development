<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:tint">@android:color/white</item>

        <item name="android:popupMenuStyle">@style/AppToolBar</item>
    </style>

    <style name="App" parent="AppTheme"/>

    <style name="AppTheme.Alt" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorNeutral</item>
    </style>

    <style name="AppToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="App.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
    </style>

    <style name="App.Text"></style>

    <style name="App.Text.White" parent="AppTheme">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="App.Rounded">
        <item name="android:background">@drawable/bg_border_curved_large</item>
    </style>

    <style name="App.Rounded.Alt" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:background">@drawable/bg_border_curved_small_neutral</item>
    </style>

    <style name="App.Rounded.Accent" parent="App.Rounded">
        <item name="android:background">@drawable/bg_border_curved_small</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="App.Text.Input">

    </style>

    <style name="App.Text.Input.Rounded">
        <item name="android:padding">@dimen/padding_sm</item>
        <item name="android:background">@drawable/bg_border_curved_large_neutral</item>
    </style>
 pare
    <style name="TextAppearance.AppCompat.Tiny" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">10sp</item>
    </style>


</resources>
