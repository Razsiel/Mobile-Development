<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:tint">@android:color/white</item>

        <item name="android:popupMenuStyle">@style/AppToolBar</item>
    </style>

    <style name="App" parent="AppTheme.Alt"/>

    <style name="AppTheme.Alt" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/colorNeutral</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="AppTheme.Alt.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorNeutral</item>
    </style>

    <style name="AppToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="App.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="App.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
    </style>

    <style name="App.Text"></style>

    <style name="App.Text.White">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="App.Rounded">
        <item name="android:background">@drawable/bg_border_curved_large</item>
    </style>

    <style name="App.Rounded.Alt" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:background">@drawable/bg_border_curved_small_neutral</item>
    </style>

    <style name="App.Rounded.Accent" parent="App.Rounded">
        <item name="android:background">@drawable/bg_border_curved_small</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="App.Text.Input">

    </style>

    <style name="App.Text.Input.Rounded">
        <item name="android:padding">@dimen/sm</item>
        <item name="android:background">@drawable/bg_border_curved_large_neutral</item>
    </style>

    <style name="TextAppearance.AppCompat.Tiny" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Tiny.Inverse" parent="Base.TextAppearance.AppCompat.Small.Inverse">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Tinted">

    </style>

    <style name="Tinted.Accent">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
