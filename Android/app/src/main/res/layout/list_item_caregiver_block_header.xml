<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/sm"
    android:background="@color/colorPrimary"
    android:theme="@style/AppTheme">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/group_indicator"
        android:layout_centerVertical="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/block_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:layout_marginEnd="@dimen/sm"/>
            <TextView
                android:id="@+id/block_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="Wonen"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/group_indicator"
        android:layout_width="@dimen/xxl"
        android:layout_height="@dimen/xxl"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/notificationCount"
        android:src="@drawable/group_indicator"
        android:scaleType="fitCenter"
        android:tint="@android:color/white"
        android:contentDescription="@null" />
    <TextView
        android:id="@+id/notificationCount"
        android:layout_width="@dimen/xl"
        android:layout_height="@dimen/xl"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorNeutral"
        android:gravity="center"
        android:background="@drawable/bg_button_round"
        android:backgroundTint="@color/colorAccent"
        tools:text="0"/>
</RelativeLayout>