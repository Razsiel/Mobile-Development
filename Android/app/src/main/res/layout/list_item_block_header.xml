<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/sm"
    style="@style/AppTheme">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/group_indicator"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/block_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:layout_marginEnd="@dimen/sm"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/block_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/block_image"
            android:layout_toStartOf="@id/group_count"
            tools:text="Wonen"/>
        <TextView
            android:id="@+id/group_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            style="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            tools:text="4 onderdelen"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/group_indicator"
        android:layout_width="@dimen/xxl"
        android:layout_height="@dimen/xxl"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/group_indicator"
        android:scaleType="fitCenter"
        android:tint="@android:color/white"
        android:contentDescription="@null" />
</RelativeLayout>