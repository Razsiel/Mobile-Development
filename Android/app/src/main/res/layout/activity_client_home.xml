<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.inholland.imready.app.view.activity.client.ClientHomeActivity">

    <!-- Background image -->
    <include layout="@layout/background_image"/>

    <!-- Container for view and toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top menu -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

        <!-- Main content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <!-- Content container -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="16dp">

                <!-- Blocks -->
                <nl.inholland.imready.app.view.layout.GridViewScrollable
                    android:id="@+id/blocks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:numColumns="3"
                    android:verticalSpacing="12dp"
                    android:horizontalSpacing="8dp"
                    android:stretchMode="columnWidth"
                    android:gravity="top|center_horizontal"
                    tools:listitem="@layout/list_item_block" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Side panel -->
    <include layout="@layout/drawer_client_home"/>

</android.support.v4.widget.DrawerLayout>
