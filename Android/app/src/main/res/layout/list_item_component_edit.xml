<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/sm"
    style="@style/AppTheme.Alt">
    <TextView
        android:id="@+id/component_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/add_indicator"
        android:layout_marginStart="@dimen/xxl"
        android:layout_centerVertical="true"
        tools:text="Woonruimte zoeken"/>
    <ImageView
        android:id="@+id/add_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add"
        android:tint="@android:color/white"
        android:background="@drawable/bg_border_curved_small"
        android:backgroundTint="@color/colorAccent"/>
</RelativeLayout>