<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shape_bubble_incoming"
    android:paddingStart="@dimen/padding_md"
    android:paddingEnd="0dp"
    android:layout_marginTop="@dimen/padding_xs"
    android:layout_marginBottom="@dimen/padding_xs"
    android:theme="@style/TextAppearance.AppCompat"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_md"
        android:paddingEnd="@dimen/padding_md"
        android:paddingTop="@dimen/padding_sm"
        android:paddingBottom="@dimen/padding_sm">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="incoming message"/>

        <TextView
            android:id="@+id/time_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/message"
            style="@style/TextAppearance.AppCompat.Small"
            tools:text="16:23"/>
    </RelativeLayout>


</LinearLayout>