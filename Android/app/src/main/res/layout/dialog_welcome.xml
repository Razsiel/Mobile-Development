<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/sm"
    android:layout_margin="@dimen/xxl"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="@string/welcome"/>
    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:text="@string/welcome_subtext"/>
    <ListView
        android:id="@+id/dialog_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_text"
        android:layout_marginTop="@dimen/sm"
        android:layout_marginBottom="@dimen/sm"
        android:scrollbars="vertical"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/sm"
        tools:listitem="@layout/list_item_activity_todo"/>
</RelativeLayout>