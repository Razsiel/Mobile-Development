<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_sm"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/activity_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:enabled="false"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/activity_checkbox"
        android:layout_alignParentEnd="true">
        <RelativeLayout
            android:id="@+id/activity_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/activity_info"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/activity_deadline_container">
                <TextView
                    android:id="@+id/activity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    tools:text="Activity title"/>
                <TextView
                    android:id="@+id/activity_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Activity description" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/activity_deadline_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_event"/>
                <TextView
                    android:id="@+id/activity_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:maxWidth="48dp"
                    tools:text="over 2 dagen"/>
            </LinearLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/activity_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_below="@id/activity_info_container"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_input">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/handin_button"
                android:padding="@dimen/padding_xs"
                android:text="@string/activity_saved_info"
                style="@style/TextAppearance.AppCompat.Tiny"/>
            <Button
                android:id="@+id/handin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:theme="@style/App.Button.Accent"
                android:text="@string/hand_in"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>