<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xxml"
    android:descendantFocusability="blocksDescendants"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/block_image"
        android:layout_width="@dimen/xxml"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:padding="@dimen/xs"
        android:src="@drawable/ic_home"
        android:tint="@android:color/white"
        android:background="@color/colorPrimary"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/block_image"
        android:paddingStart="@dimen/sm"
        android:paddingEnd="@dimen/sm"
        android:background="@color/colorAccent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/button_goto"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Curriculum Vitae schrijven"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Inverse"
                android:lines="1"/>
            <TextView
                android:id="@+id/activity_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                tools:text="Over 2 dagen" />
        </LinearLayout>
        <ImageView
            android:id="@+id/button_goto"
            android:layout_width="@dimen/xxl"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:tint="@android:color/white"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_right"/>
    </RelativeLayout>

</RelativeLayout>