<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_xs"
    android:layout_marginBottom="@dimen/padding_xs"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/padding_xxl"
        android:background="@drawable/bg_shape_bubble_outgoing"
        android:orientation="vertical"
        android:paddingEnd="@dimen/padding_md"
        android:paddingStart="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_sm"
            android:paddingEnd="@dimen/padding_md"
            android:paddingStart="@dimen/padding_md"
            android:paddingTop="@dimen/padding_sm">

            <TextView
                android:id="@+id/message"
                style="@style/TextAppearance.AppCompat.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="outgoing message" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>